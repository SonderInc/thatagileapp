rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /companies/{companyId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && ((get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyId', null) == companyId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('appAdmin', false) == true);
      allow create: if false;
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', null) != null && companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminCompanyIds;
      match /settings/{docId} {
        allow read: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', []) || companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', []) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('appAdmin', false) == true);
        allow write: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', []);
      }
      match /frameworkMigrations/{jobId} {
        allow read: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', []) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('appAdmin', false) == true);
        allow write: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', []);
      }
      match /frameworkMigrationReports/{jobId} {
        allow read: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', []) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('appAdmin', false) == true);
        allow write: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', []);
      }
      match /frameworkMigrationMoves/{jobId} {
        allow read: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', []) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('appAdmin', false) == true);
        allow write: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', []);
        match /moves/{moveId} {
          allow read: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', []) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('appAdmin', false) == true);
          allow write: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', []);
        }
      }
    }
    match /workItems/{itemId} {
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && resource.data.get('companyId', null) != null && resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds;
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && request.resource.data.get('companyId', null) != null && request.resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds;
    }
    match /productTerminology/{productId} {
      allow read: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && exists(/databases/$(database)/documents/workItems/$(productId)) && get(/databases/$(database)/documents/workItems/$(productId)).data.get('companyId', null) in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', []) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('appAdmin', false) == true;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && exists(/databases/$(database)/documents/workItems/$(productId)) && get(/databases/$(database)/documents/workItems/$(productId)).data.get('companyId', null) in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', []);
    }
    match /productHierarchyConfigs/{productId} {
      allow read: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (exists(/databases/$(database)/documents/workItems/$(productId)) && get(/databases/$(database)/documents/workItems/$(productId)).data.get('companyId', null) in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', []) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('appAdmin', false) == true);
      allow write: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && exists(/databases/$(database)/documents/workItems/$(productId)) && (get(/databases/$(database)/documents/workItems/$(productId)).data.get('companyId', null) in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', []) || get(/databases/$(database)/documents/workItems/$(productId)).data.get('companyId', null) in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('rteCompanyIds', []));
    }
    match /companySettings/{companyId} {
      allow read: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', []) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('appAdmin', false) == true);
      allow write: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', []);
    }
    match /productSettings/{productId} {
      allow read: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (resource.data.get('companyId', null) in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', []) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('appAdmin', false) == true);
      allow create: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && request.resource.data.get('companyId', null) in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', []);
      allow update, delete: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && resource.data.get('companyId', null) in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', []);
    }
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || (get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && resource.data.get('companyIds', null) != null && resource.data.companyIds.hasAny(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds)) || (get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', null) != null && resource.data.get('companyIds', null) != null && resource.data.companyIds.hasAny(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminCompanyIds)));
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || (get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', null) != null && resource.data.get('companyIds', null) != null && resource.data.companyIds.hasAny(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminCompanyIds))) && request.resource.data.get('companyIds', []) == resource.data.get('companyIds', []) && request.resource.data.get('adminCompanyIds', []) == resource.data.get('adminCompanyIds', []);
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    match /teams/{teamId} {
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && resource.data.get('companyId', null) != null && (resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', null) != null && resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminCompanyIds);
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && request.resource.data.get('companyId', null) != null && (request.resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', null) != null && request.resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminCompanyIds);
    }
    match /invites/{token} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.get('invitedBy', null) == request.auth.uid;
      allow update, delete: if request.auth != null && (resource.data.get('invitedBy', null) == request.auth.uid || resource.data.get('email', null) == request.auth.token.email);
    }
    match /licences/{key} {
      allow read, update: if request.auth != null;
      allow create: if request.auth != null;
    }
    match /tenantFirebaseConfigs/{slug} {
      allow read, write: if false;
    }
    function isPlanningEditor(companyId) {
      let u = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return companyId in u.get('adminCompanyIds', []) || companyId in u.get('rteCompanyIds', []);
    }
    match /planningBoards/{boardId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && resource.data.get('companyId', null) != null && resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', []);
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && request.resource.data.get('companyId', null) != null && isPlanningEditor(request.resource.data.companyId);
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && resource.data.get('companyId', null) != null && isPlanningEditor(resource.data.companyId);
    }
    match /boards/{boardId} {
      function userDocPath() {
        return /databases/$(database)/documents/users/$(request.auth.uid);
      }
      function userExists() {
        return request.auth != null && exists(userDocPath());
      }
      function companyIds() {
        return userExists() ? get(userDocPath()).data.get('companyIds', []) : [];
      }
      function adminCompanyIds() {
        return userExists() ? get(userDocPath()).data.get('adminCompanyIds', []) : [];
      }
      function rteCompanyIds() {
        return userExists() ? get(userDocPath()).data.get('rteCompanyIds', []) : [];
      }
      function canReadBoard() {
        return userExists()
          && resource.data.get('companyId', null) is string
          && resource.data.companyId in companyIds();
      }
      function canWriteBoard() {
        return userExists()
          && resource.data.get('companyId', null) is string
          && (
            resource.data.companyId in adminCompanyIds()
            || resource.data.companyId in rteCompanyIds()
          );
      }
      function canCreateBoard() {
        return userExists()
          && request.resource.data.get('companyId', null) is string
          && (
            request.resource.data.companyId in adminCompanyIds()
            || request.resource.data.companyId in rteCompanyIds()
          );
      }

      allow read: if canReadBoard();

      // Only allow creating planning boards (optional guard)
      allow create: if canCreateBoard()
        && request.resource.data.get('type', null) == 'planning'
        && request.resource.data.get('name', null) is string;

      allow update, delete: if canWriteBoard();

      match /items/{itemId} {
        function userDocPath() { return /databases/$(database)/documents/users/$(request.auth.uid); }
        function userExists() { return request.auth != null && exists(userDocPath()); }
        function adminCompanyIds() { return userExists() ? get(userDocPath()).data.get('adminCompanyIds', []) : []; }
        function rteCompanyIds() { return userExists() ? get(userDocPath()).data.get('rteCompanyIds', []) : []; }

        // board companyId is on the parent doc; read it safely via get()
        function parentCompanyId() {
          return get(/databases/$(database)/documents/boards/$(boardId)).data.get('companyId', null);
        }
        function canWriteItems() {
          return userExists()
            && parentCompanyId() is string
            && (parentCompanyId() in adminCompanyIds() || parentCompanyId() in rteCompanyIds());
        }
        function canReadItems() {
          return userExists()
            && parentCompanyId() is string
            && parentCompanyId() in get(userDocPath()).data.get('companyIds', []);
        }

        allow read: if canReadItems();
        allow create, update, delete: if canWriteItems();
      }
    }
    match /planningPlacements/{placementId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && exists(/databases/$(database)/documents/planningBoards/$(resource.data.boardId)) && get(/databases/$(database)/documents/planningBoards/$(resource.data.boardId)).data.get('companyId', null) in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', []);
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && request.resource.data.get('boardId', null) != null && exists(/databases/$(database)/documents/planningBoards/$(request.resource.data.boardId)) && isPlanningEditor(get(/databases/$(database)/documents/planningBoards/$(request.resource.data.boardId)).data.get('companyId', ''));
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && resource.data.get('boardId', null) != null && exists(/databases/$(database)/documents/planningBoards/$(resource.data.boardId)) && isPlanningEditor(get(/databases/$(database)/documents/planningBoards/$(resource.data.boardId)).data.get('companyId', ''));
    }
  }
}

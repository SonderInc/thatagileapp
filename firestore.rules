rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /companies/{companyId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds;
      allow create: if false;
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', null) != null && companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminCompanyIds;
    }
    match /workItems/{itemId} {
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && resource.data.get('companyId', null) != null && resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds;
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && request.resource.data.get('companyId', null) != null && request.resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds;
    }
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || (get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && resource.data.get('companyIds', null) != null && resource.data.companyIds.hasAny(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds)) || (get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', null) != null && resource.data.get('companyIds', null) != null && resource.data.companyIds.hasAny(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminCompanyIds)));
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || (get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', null) != null && resource.data.get('companyIds', null) != null && resource.data.companyIds.hasAny(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminCompanyIds)));
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    match /teams/{teamId} {
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && resource.data.get('companyId', null) != null && (resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', null) != null && resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminCompanyIds);
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)) != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('companyIds', null) != null && request.resource.data.get('companyId', null) != null && (request.resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('adminCompanyIds', null) != null && request.resource.data.companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminCompanyIds);
    }
    match /invites/{token} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.get('invitedBy', null) == request.auth.uid;
      allow update, delete: if request.auth != null && (resource.data.get('invitedBy', null) == request.auth.uid || resource.data.get('email', null) == request.auth.token.email);
    }
    match /licences/{key} {
      allow read, update: if request.auth != null;
      allow create: if request.auth != null;
    }
    match /tenantFirebaseConfigs/{slug} {
      allow read, write: if false;
    }
  }
}
